datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Tecnology {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String   @unique
  icon       String
  projects   Project[]
}

model Project {
  id            String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  slug          String      @unique(map: "project_slug_idx")
  title         String
  description   String
  imageUrl      String
  projectUrl    String
  githubUrl     String
  client        String
  technologies  Tecnology[]
  year          Int         @default(2025)
  role          String      @default("Frontend Developer")
  challenges    String[]
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  updatedAt     DateTime    @updatedAt
}
